#app {
  height: 100%;
}
.enter-x {
  transform: translateX(50px);
}
.-enter-x {
  transform: translateX(-50px);
}
.enter-x,
.-enter-x {
  opacity: 0;
  animation: enter-x-animation 0.4s ease-out 0.3s;
  animation-fill-mode: forwards;
  animation-delay: 0.1s;
}
@keyframes enter-x-animation {
  to {
    opacity: 1;
    transform: translateX(0);
  }
}
.ant-btn-error {
  color: red;
}
