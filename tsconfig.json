{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "ES2015"],
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"],
      "@c/*": ["src/components/*"],
      "@s/*": ["src/store/*"],
      "@h/*": ["src/hooks/*"],
      "@u/*": ["src/utils/*"],
      "@e/*": ["src/enums/*"],
      "@a/*": ["src/api/*"],
      "@d/*": ["src/directives/*"],
      "#/*": ["types/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "vite.config.ts",
    "*.d.ts",
  ]
}